<% if @teachers.blank? %>
<p>There is no teachers.</p>
<% else %>
<p>Available teachers</p>

<ul id = "teachers">
   <% @teachers.each do |t| %>
   <li><%= link_to t.fname, {:action => 'show', :id => t.id} -%>
   	
   	<b> <%= link_to 'Edit', {:action => "edit",
   		:id => t.id} %></b>
    <b> <%= link_to "Delete", {:action => 'delete', :id => t.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
   
   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Teachers", {:action => 'new' }%></p>