<% if @sections.blank? %>
<p>There is no fields.</p>
<% else %>
<p>Available sections</p>

<ul id = "sections">
   <% @sections.each do |s| %>
   <li><%= link_to s.sectionName, {:action => 'show', :id => s.id} -%>
   	
   	<b> <%= link_to 'Edit', {:action => "edit",
   		:id => s.id} %></b>
    <b> <%= link_to "Delete", {:action => 'delete', :id => s.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
   
   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new fields", {:action => 'new' }%></p>