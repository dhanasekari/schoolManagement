<% if @schools.blank? %>
<p>there is no schools</p>
<% else %>
<p>These are the available schools</p>

<ul id = "schools">
   <% @schools.each do |s| %>
   <li>
   <%= link_to s.name, {:action => 'show', :id => s.id} -%>
   	 <b> <%= link_to 'Edit', {:action => "edit",
   		:id => s.id} %></b>
     <b> <%= link_to "Delete", {:action => 'delete', :id => s.id},
      :confirm => "Are you sure you want to delete this item?" %></b>

   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Schools", {:action => 'new' }%></p>



   





